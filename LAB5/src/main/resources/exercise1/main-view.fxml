<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="exercise1.MainController"
      spacing="12" alignment="TOP_CENTER"
      prefWidth="900" prefHeight="650">

    <Label text="COMP228 Lab 5 â€” Players &amp; Games"
           style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <HBox spacing="18">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>


        <VBox spacing="8" prefWidth="420" style="-fx-border-color:lightgray;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Player (Insert / Update)"
                   style="-fx-font-weight:bold;"/>

            <HBox spacing="8">
                <Label text="Select Player:" minWidth="90"/>
                <ComboBox fx:id="cbPlayers"
                          onAction="#handleSelectPlayerCombo"
                          prefWidth="250"/>
            </HBox>

            <GridPane hgap="8" vgap="6">
                <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="tfFirstName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="tfLastName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="tfEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Country:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="tfCountry" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Age:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="tfAge" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add Player" onAction="#handleAddPlayer"/>
                <Button text="Update Player" onAction="#handleUpdatePlayer"/>
            </HBox>
        </VBox>

        <!-- ================= GAME & PLAYED SECTION ================= -->
        <VBox spacing="8" prefWidth="420" style="-fx-border-color:lightgray;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Games &amp; Played"
                   style="-fx-font-weight:bold;"/>

            <HBox spacing="8">
                <Label text="New Game:" minWidth="80"/>
                <TextField fx:id="tfNewGameTitle" prefWidth="200"/>
                <Button text="Add Game" onAction="#handleAddGame"/>
            </HBox>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Select Game:" minWidth="80"/>
                <ComboBox fx:id="cbGames" prefWidth="220"/>
            </HBox>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Date:" minWidth="50"/>
                <DatePicker fx:id="dpPlayingDate" prefWidth="90"/>
                <Label text="Score:" minWidth="10"/>
                <TextField fx:id="tfScore" prefWidth="50"/>
                <Button text="Add Played" onAction="#handleAddPlayed"/>
            </HBox>

            <Button text="Load Report" onAction="#handleLoadReport"/>
        </VBox>
    </HBox>

    <!-- ================= REPORT TABLE ================= -->
    <TableView fx:id="tableReport" prefHeight="320" prefWidth="860">
        <columns>
            <TableColumn fx:id="colPlayerId" text="Player ID" prefWidth="90"/>
            <TableColumn fx:id="colPlayerName" text="Player Name" prefWidth="200"/>
            <TableColumn fx:id="colGame" text="Game" prefWidth="220"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
            <TableColumn fx:id="colScore" text="Score" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
